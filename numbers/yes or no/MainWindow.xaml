<Window x:Class="HonestSurvey.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Дуже чесне опитування" Height="300" Width="400">
    <Grid>
        <TextBlock Text="Чи подобається тобі ця програма?" 
                   FontSize="16" HorizontalAlignment="Center" 
                   VerticalAlignment="Top" Margin="0,20,0,0" />

        <Button Name="YesButton" Content="Так" Width="80" Height="30"
                HorizontalAlignment="Left" Margin="80,100,0,0"
                VerticalAlignment="Top" Click="YesButton_Click"/>

        <Button Name="NoButton" Content="Ні" Width="80" Height="30"
                HorizontalAlignment="Left" Margin="200,100,0,0"
                VerticalAlignment="Top" MouseEnter="NoButton_MouseEnter"/>
    </Grid>
</Window>
