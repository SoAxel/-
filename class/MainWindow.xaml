<Window x:Class="Delivery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Склад" Height="400" Width="600">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="10">
            <TextBlock Text="Склад №:" VerticalAlignment="Center"/>
            <TextBox x:Name="NumberBox" Width="50" Margin="5,0"/>
            <TextBlock Text="Обслуговування:" VerticalAlignment="Center"/>
            <TextBox x:Name="CostBox" Width="100" Margin="5,0"/>
            <Button Content="Зберегти" Click="Save_Click" Margin="10,0"/>
        </StackPanel>
        <ListBox x:Name="PartiiList" Margin="10"/>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" Margin="10">
            <Button Content="Додати" Click="Add_Click" Width="80" Height="76"/>
            <Button Content="Видалити" Click="Delete_Click" Width="80" Margin="10,0" Height="81"/>
        </StackPanel>
    </DockPanel>
</Window>