<Window x:Class="Group.PartiyaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Партія" Height="300" Width="400">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Назва городини:"/>
        <TextBox x:Name="NameBox" Grid.Row="0" Margin="150,0,0,0" Width="200"/>

        <TextBlock Text="Країна:" Grid.Row="1"/>
        <TextBox x:Name="CountryBox" Grid.Row="1" Margin="150,0,0,0" Width="200"/>

        <TextBlock Text="Сезон:" Grid.Row="2"/>
        <TextBox x:Name="SeasonBox" Grid.Row="2" Margin="150,0,0,0" Width="200"/>

        <TextBlock Text="Кількість:" Grid.Row="3"/>
        <TextBox x:Name="QtyBox" Grid.Row="3" Margin="150,0,0,0" Width="200"/>

        <TextBlock Text="Ціна:" Grid.Row="4"/>
        <TextBox x:Name="PriceBox" Grid.Row="4" Margin="150,0,0,0" Width="200"/>

        <TextBlock Text="Транспорт:" Grid.Row="5"/>
        <TextBox x:Name="TransBox" Grid.Row="5" Margin="150,0,0,0" Width="200"/>

        <TextBlock Text="Дата доставки:" Grid.Row="6"/>
        <DatePicker x:Name="DatePicker" Grid.Row="6" Margin="150,0,0,0" Width="200"/>

        <StackPanel Orientation="Horizontal" Grid.Row="7" HorizontalAlignment="Right">
            <Button Content="OK" Width="80" Click="OK_Click" Margin="5,94,5,4.8"/>
            <Button Content="Скасувати" Width="80" Click="Cancel_Click" Margin="5,94,5,4.8"/>
        </StackPanel>
    </Grid>
</Window>
